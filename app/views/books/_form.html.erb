<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@book) do |f| %>
      
      <%=f.label :author %>
      <%= f.collection_select :author_id, Author.all, :id, :name, {:class => 'form-control'} %>

      <div id="categories">
        <%= f.fields_for :bookcategories do |bc| %>
          
            <%= render "bookcategory_fields", f: bc%>

        <% end %>
        <%= link_to_add_association 'Add category', f, :bookcategories %>
     </div>

      <%= f.file_field :book_img %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :quantity %>
      <%= f.text_field :quantity, class: 'form-control' %>

      <%= f.label :page %>
      <%= f.text_field :page, class: 'form-control' %>

      <%= f.label :publisher %>
      <%= f.text_field :publisher, class: 'form-control ' %>

      <%= f.submit "Create", class: "btn btn-primary col-md-12" %>
    <% end %>
  </div>
</div>  

